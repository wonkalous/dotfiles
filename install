#!/usr/bin/env bash
# set -e

DOTBOT_DIR="dotbot"
BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

cd "${BASEDIR}"
sudo ./install_i3.sh
sudo apt -y install zsh curl rofi i3blocks vim emacs nano terminator wget nemo bat jq kitty htop
sudo ./install_sublime.sh
sudo ./install_clipmenu.sh
sudo ./install_rofi-calc.sh
sudo ./install_chrome.sh
sudo chsh -s $(which zsh)

git submodule update --init --recursive "${DOTBOT_DIR}"
mkdir -p ~/code
git clone git@github.com:so-fancy/diff-so-fancy.git ~/code/diff-so-fancy
mkdir -p ~/data
mkdir -p ~/envs
mkdir -p ~/temp
# base lib
./run_dotbot.sh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
# set +e
